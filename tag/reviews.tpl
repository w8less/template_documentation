<div>    <{foreach $reviews as $review}>        <div>            <{if $review.element.name && $review.element.url}>                <div>                    <{if !$tag_attributes.element_no_name}>                        <div>                            <a href="<{$review.element.url}>">                                <{$review.element.name|htmlspecialchars}>                            </a>                        </div>                    <{/if}>                    <{if !$tag_attributes.element_no_photo}>                        <{if $review.element.photo}>                            <div class="photo">                                <a href="<{$review.element.url}>">                                    <img src="<{$review.element.photo}>" />                                </a>                            </div>                        <{/if}>                    <{/if}>                </div>            <{/if}>            <{if $tag_attributes.author && $review.author}>                <div>                    <{$review.author|htmlspecialchars}>                </div>            <{/if}>            <{if $tag_attributes.text}>                <div>                    <{if $tag_attributes.trunc}>                        <{assign "comment" $review.comment|truncate:$tag_attributes.trunc}>                        <{$comment}>                        <{if $comment|strlen < $review.comment|strlen}>                            <a href="<{$review.element.more}>">                                <{t "Читать далее"}>                            </a>                        <{/if}>                    <{else}>                        <{$review.comment|nl2br}>                    <{/if}>                </div>            <{/if}>            <{if $tag_attributes.stars}>                <div>                    <{t "Поставил оценку {rating}" rating=$review.rating}>                </div>            <{/if}>            <{if $tag_attributes.date}>                <div>                    <{$review.created_at|as_date:"long"}>                    <{$review.created_at|as_time:"short"}>                </div>            <{/if}>        </div>    <{/foreach}></div>